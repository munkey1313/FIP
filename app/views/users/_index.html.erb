

<% if @members.present? %>

<table>
  <thead>
    <tr>
      <th>User Name</th>
    </tr>
  </thead>

  <tbody>
    <% @members.each do |member| %>
    <% if member == current_member %>
      <tr>
        <td><h2><%= link_to member.username, user_path(member.id) %> (me)<h2> </td>
        <% if member.image.blank? %>
        
        <% else %>
           <td><%=  image_tag member.image.url(:thumb), :class => "style_image_small" %></td>
        <% end %>
      </tr>
    <% else %>
      <tr>
        <td><h2><%= link_to member.username, user_path(member.id) %><h2></td>
        <% if member.image.blank? %>

        <% else %>
           <td><%=  image_tag member.image.url(:thumb), :class => "style_image_small" %></td>
        <% end %>
      </tr>
      

    <% end %>
    <% end %>
  </tbody>
</table>

<% else %>

<h3>No Friends</h3>

<% end %>
