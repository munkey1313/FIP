<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
    <section>
      <h1><%= @member.name %></h1>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
    <% if @members.any? %>
      <ul class="users">
        <% @members.each do |user| %>
            <%= image_tag user.image.url(:medium) %>
          <% end %>
      </ul>
    <% end %>
  </aside>
</div>