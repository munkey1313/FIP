    <!--Dashboard Page-->

    <p id="notice"><%= notice %></p>
    <body>



      <!-- navagation buttons in the dashboard -->
      <ul class="nav nav-pills">
        <li class="active"><a href="#">Home</a></li>
        <li><a href="/leagues/new">Create League</a></li>
        <li><a href="/leagues">View Leagues</a></li>
        <li><a href="#">Leaderboard</a></li>
        <li><a href="#">Add Funds</a></li>
        <li><a href="/members">View Friends</a></li>
      </ul>


      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="row"> 
        <div class="jumbotron">
          <div class="row"> 



            <div class="col-sm-2"><!--user section-->
              <div class="row">
                
                <div><!--displays members picture, dashboard-->
                  <% if @current_member.image.blank? %>

                  <% else %>
                  <td><%=  image_tag @current_member.image.url(:medium), :class => "style_image" %></td>
                  <% end %>
                  </br><!--picture end-->

                  <!--buttons under users picture, dashboard-->
                  <a class="btn btn-lg btn-default" href="/members/edit">EDIT PICTURE AND PROFILE</a>  
                </div>
              </div>
            </div><!--end user section-->

            <div id ="dash_user" class="col-sm-3"><!--User Info, dashboard-->
              <ul>
                <li><%= @current_member.username %></li>
                <li>ScoreCard</li>
                <li>Funds</li>
              </ul>
            </div><!--end User Info, dashboard-->


            <div class="col-sm-3">
            </div>


            <div class="col-sm-3"><!--friend panel, dashboard-->
              <div class="panel panel-default">
                <div class="panel-heading">
                  <%= form_tag(members_path, :method => "get", id: "search-form") do %>
                    <%= text_field_tag :search, params[:search], placeholder: "Search Members", :class => "form-control" %>
                    <%= submit_tag "Search", :name => nil, :class => "btn btn-primary"%>
                  <% end %>
                  <center><h2>Friends List</h2></center>
                </div>
                <div class="body">
                  <%= render '/users/index' %>
                </div>
                <%= render '/shared/stats' %>       
              </div>
            </div><!--end panel-->


          </div>
        </div>
      </row>
    </body>